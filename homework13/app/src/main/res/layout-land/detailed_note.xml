<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="abbyy.com.homework13.DetailFragment">
    <ImageView
        android:id="@+id/detailedPageImg"
        android:layout_height="0dp"
        android:layout_width="@dimen/secondPageImageWidthLand"
        android:layout_marginLeft="@dimen/standardMargin"
        android:layout_marginTop="@dimen/standardMargin"
        android:layout_marginBottom="@dimen/standardMargin"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detailedPageTxt"/>
    <TextView
        android:id="@+id/detailedPageTxt"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/standardMargin"
        android:layout_marginRight="@dimen/standardMargin"
        android:layout_marginTop="@dimen/standardMargin"
        android:layout_marginBottom="@dimen/standardMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/detailedPageImg"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
